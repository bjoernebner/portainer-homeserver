{
  "version": "3",
  "templates": [
    {
      "type": 1,
      "title": "Home Assistant",
      "description": "Smart Home Zentrale - Version 2024.5",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/homeassistant/icon.png",
      "image": "homeassistant/home-assistant:2024.5",
      "network": "host",
      "volumes": [
        { "container": "/config", "bind": "${APPDATA_BASE}/homeassistant" },
        { "container": "/etc/localtime", "bind": "/etc/localtime", "readonly": true }
      ],
      "env": [
        { "name": "APPDATA_BASE", "label": "Pfad für Configs", "default": "/var/home/user/appdata" }
      ]
    },
    {
      "type": 1,
      "title": "Zigbee2MQTT",
      "description": "Zigbee Brücke - Version 1.42.0",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/homeassistant/icon.png",
      "image": "koenkk/zigbee2mqtt:1.42.0",
      "volumes": [
        { "container": "/app/data", "bind": "${APPDATA_BASE}/zigbee2mqtt" }
      ],
      "devices": [
        { "host": "${ZIGBEE_DONGLE}", "container": "/dev/ttyACM0" },
        { "host": "${USB}", "container": "/dev/bus/usb" }
      ],
      "env": [
        { "name": "APPDATA_BASE", "label": "Pfad für Configs", "default": "/var/home/user/appdata" },
        { "name": "USB", "label": "USB Pfad", "default": "/dev/bus/usb" },
        { "name": "ZIGBEE_DONGLE", "label": "Stick Pfad", "default": "/dev/serial/by-id/usb-ITead_Sonoff_Zigbee_3.0_USB_Dongle_Plus_xxx" }
      ]
    },
    {
      "type": 1,
      "title": "Pi-hole",
      "description": "DNS-Adblocker - Version 2024.07.0",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/pihole/icon.png",
      "image": "pihole/pihole:2024.07.0",
      "ports": [
        "53:53/tcp",
        "53:53/udp",
        "8800:80/tcp"
      ],
      "volumes": [
        { "container": "/etc/pihole", "bind": "${APPDATA_BASE}/pihole" },
        { "container": "/etc/dnsmasq.d", "bind": "${APPDATA_BASE}/dnsmasq.d" }
      ],
      "env": [
        { "name": "APPDATA_BASE", "label": "Pfad für Configs", "default": "/var/home/user/appdata" },
        { "name": "WEBPASSWORD", "label": "Admin Passwort" },
        { "name": "TZ", "label": "Zeitzone", "default": "Europe/Berlin" }
      ]
    },
    {
      "type": 1,
      "title": "MeTube",
      "description": "YouTube Downloader - Stable Build",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/metube/icon.png",
      "image": "alexta69/metube:2024.01.25",
      "ports": ["8081:8081/tcp"],
      "volumes": [
        { "container": "/downloads", "bind": "${STORAGE_BASE}/downloads" }
      ],
      "env": [
        { "name": "STORAGE_BASE", "label": "Download-Pfad", "default": "/var/home/user/data" }
      ]
    },
    {
      "type": 1,
      "title": "Filebrowser",
      "description": "Dateimanager - Version v2.30.0",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/filebrowser/icon.png",
      "image": "filebrowser/filebrowser:v2.30.0",
      "ports": ["8077:80/tcp"],
      "volumes": [
        { "container": "/config", "bind": "${APPDATA_BASE}/filebrowser" },
        { "container": "/srv", "bind": "${STORAGE_BASE}" }
      ],
      "env": [
        { "name": "APPDATA_BASE", "label": "Pfad für Configs", "default": "/var/home/user/appdata" },
        { "name": "STORAGE_BASE", "label": "Speicherpfad", "default": "/var/home/user/data" }
      ]
    },
    {
      "type": 1,
      "title": "Stirling PDF",
      "description": "PDF Tool - Version 0.25.1",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/stirling-pdf/icon.png",
      "image": "froodle/s-pdf:0.25.1",
      "ports": ["8079:8080/tcp"],
      "volumes": [
        { "container": "/configs", "bind": "${APPDATA_BASE}/stirling-pdf/configs" }
      ],
      "env": [
        { "name": "APPDATA_BASE", "label": "Pfad für Configs", "default": "/var/home/user/appdata" }
      ]
    },
    {
      "type": 1,
      "title": "MySpeed",
      "description": "Speedtest - Version 1.0.9",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/myspeed/icon.png",
      "image": "gnmyt/myspeed:v1.0.9",
      "ports": ["8084:5216/tcp"],
      "volumes": [
        { "container": "/myspeed/data", "bind": "${APPDATA_BASE}/myspeed" }
      ],
      "env": [
        { "name": "APPDATA_BASE", "label": "Pfad für Configs", "default": "/var/home/user/appdata" }
      ]
    },
    {
      "type": 1,
      "title": "Heimdall",
      "description": "Dashboard - Version 2.5.8",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/heimdall/icon.png",
      "image": "linuxserver/heimdall:2.5.8",
      "ports": ["8082:80/tcp"],
      "volumes": [
        { "container": "/config", "bind": "${APPDATA_BASE}/heimdall" }
      ],
      "env": [
        { "name": "APPDATA_BASE", "label": "Pfad für Configs", "default": "/var/home/user/appdata" }
      ]
    }
  ]
}
