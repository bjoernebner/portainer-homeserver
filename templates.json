{
  "version": "3",
  "templates": [
    {
      "type": 1,
      "title": "Home Assistant",
      "description": "Smart Home Zentrale - CasaOS Version 2024.5",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/homeassistant/icon.png",
      "image": "homeassistant/home-assistant:2024.5",
      "network": "host",
      "volumes": [
        { "container": "/config", "bind": "/var/home/user/appdata/homeassistant" }
      ]
    },
    {
      "type": 1,
      "title": "Zigbee2MQTT",
      "description": "Zigbee Br√ºcke - Version 1.42.0",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/homeassistant/icon.png",
      "image": "koenkk/zigbee2mqtt:1.42.0",
      "volumes": [
        { "container": "/app/data", "bind": "/var/home/user/appdata/zigbee2mqtt" }
      ],
      "devices": [
        { "host": "/dev/serial/by-id/usb-ITead_Sonoff_Zigbee_3.0_USB_Dongle_Plus_xxx", "container": "/dev/ttyUSB0" }
      ],
      "env": [
        { "name": "TZ", "label": "Zeitzone", "default": "Europe/Berlin" }
      ]
    },
    {
      "type": 1,
      "title": "Pi-hole",
      "description": "DNS-Adblocker - CasaOS Version 2024.07.0",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/pihole/icon.png",
      "image": "pihole/pihole:2024.07.0",
      "ports": [
        "53:53/tcp",
        "53:53/udp",
        "8800:80/tcp"
      ],
      "volumes": [
        { "container": "/etc/pihole", "bind": "/var/home/user/appdata/pihole" },
        { "container": "/etc/dnsmasq.d", "bind": "/var/home/user/appdata/dnsmasq.d" }
      ],
      "env": [
        { "name": "WEBPASSWORD", "label": "Admin Passwort" },
        { "name": "TZ", "label": "Zeitzone", "default": "Europe/Berlin" }
      ]
    },
    {
      "type": 1,
      "title": "MySpeed",
      "description": "Speedtest Monitor - Version 1.0.9",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/myspeed/icon.png",
      "image": "gnmyt/myspeed:1.0.9",
      "ports": ["8084:5216/tcp"],
      "volumes": [
        { "container": "/myspeed/data", "bind": "/var/home/user/appdata/myspeed" }
      ]
    },
    {
      "type": 1,
      "title": "MeTube",
      "description": "YouTube Downloader - Version 2024.01.25",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/metube/icon.png",
      "image": "alexta69/metube:2024.01.25",
      "ports": ["8081:8081/tcp"],
      "volumes": [
        { "container": "/downloads", "bind": "/var/home/user/data/downloads" }
      ]
    },
    {
      "type": 1,
      "title": "Filebrowser",
      "description": "Dateimanager - Version v2.30.0",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/filebrowser/icon.png",
      "image": "filebrowser/filebrowser:v2.30.0",
      "ports": ["8077:80/tcp"],
      "volumes": [
        { "container": "/config", "bind": "/var/home/user/appdata/filebrowser" },
        { "container": "/srv", "bind": "/var/home/user/data" }
      ]
    },
    {
      "type": 1,
      "title": "Stirling PDF",
      "description": "PDF Tool - Stable Release",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/stirling-pdf/icon.png",
      "image": "stirlingtools/stirling-pdf:latest",
      "ports": ["8079:8080/tcp"],
      "volumes": [
        { "container": "/configs", "bind": "/var/home/user/appdata/stirling-pdf/configs" }
      ]
    },
    {
      "type": 1,
      "title": "Heimdall",
      "description": "Dashboard - LinuxServer Build",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/heimdall/icon.png",
      "image": "linuxserver/heimdall:latest",
      "ports": ["8082:80/tcp"],
      "volumes": [
        { "container": "/config", "bind": "/var/home/user/appdata/heimdall" }
      ]
    },
    {
      "type": 1,
      "title": "Recipya",
      "description": "Rezeptverwaltung - Version Stable",
      "logo": "https://raw.githubusercontent.com/bjoernebner/portainer-homeserver/main/recipya/icon.png",
      "image": "recipya/recipya:latest",
      "ports": ["8078:80/tcp"],
      "volumes": [
        { "container": "/app/data", "bind": "/var/home/user/appdata/recipya" }
      ]
    }
  ]
}
